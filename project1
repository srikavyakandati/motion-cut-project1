#styles.css code in Animated login form#



* {
    margin: 0;
    padding: 0;
    font-family: system-ui;
}



.background-image,
.overlay-image {
    position: absolute;
    width: 100%;
    height: 100%;
}
.overlay-image {
    opacity: 0.7; 
}


body {
    height: 100vh;
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
    
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
}

body:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.100);
}



.container {
    position: relative;
    width: 600px;
    height: 300px;
	
}

.bicycle {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 200px;
    height: 300px;
	
}
.bicycle {
    width: 300px; /* Adjust the size of the bicycle as needed */
    animation: moveBicycle 10s infinite alternate;
}

@keyframes moveBicycle {
    0% {
        transform: translateX(-600px); /* Move bicycle to the left */
    }
    100% {
        transform: translateX(1600px); /* Move bicycle to the right */
    }
}



.frame {
    height: 400px;
    width: 500px;
    backdrop-filter: blur(20px);
    border: 1px solid white;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10px;
    box-shadow: 0px 0px 5px none;
	border:none;
	margin-right: 38%;
}


.login {
    font-size: 30px;
    font-weight: bold;
    color: brown;
    margin-top: 3.0rem;
    margin-bottom: 2.5rem;
}

.email,
.password {
    width: 90%;
    height: auto;
    display: flex;
    align-items: center;
    margin: 0.5rem;
	border: 1px solid #white;
    position: relative;
	background-color:white;
	margin-left:1.0rem;
	margin-right:1.0rem;
}

.email input,
.password input {
    padding: 8px 8px 8px 15px;
    background: transparent;
    border: none;
    width: 100%;
    border: 1px solid #white;
    border-radius: 50px;
    font-size: 17px;
    outline: none;
    font-weight: bold;
	background-color:white;
}

.email input::placeholder,
.password input::placeholder {
    color: brown;
    font-weight: bold;
	background-color:white;
}

.email img,
.password img {
    position: absolute;
    right: 0.7rem;
}

.remember_forgot {
    height: auto;
    width: 90%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 1.5rem;
}

.remember_forgot .remember {
    height: auto;
    width: auto;
    display: flex;
    align-items: center;
    font-size: 17px;
    color: brown;
    font-weight: bold;
}

.remember_forgot .remember input {
    height: 15px;
    width: 15px;
    margin-right: 0.2rem;
}

.remember_forgot .forgot a {
    font-size: 17px;
    text-decoration: none;
    color: brown;
    font-weight: bold;
}

.log {
    width: 90%;
    padding: 10px;
    margin-top: 1.5rem;
    font-size: 20px;
    font-weight: bold;
    outline: none;
    border: none;
    border: 1px solid #white;
    cursor: pointer;
	background-color:brown;
	color:white;
	
}
.leaf {
            position: absolute;
            top: -10%;
            opacity: 0.8;
            animation: fall linear infinite;
        }
        @keyframes fall {
            0% {
                transform: translateY(0) rotate(0deg);
            }
            100% {
                transform: translateY(100vh) rotate(360deg);
                opacity: 0;
            }
        }

